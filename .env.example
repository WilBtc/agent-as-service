# Agent as a Service - Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# Claude Configuration
# ========================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# ========================================
# API Security
# ========================================
AAAS_API_KEY=your-secure-api-key-here
REQUIRE_API_KEY=true

# ========================================
# Database
# ========================================
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgresql://aaas:your-secure-postgres-password@postgres:5432/aaas

# ========================================
# Redis
# ========================================
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@redis:6379/0

# ========================================
# Monitoring
# ========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password

# ========================================
# Alerting
# ========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ========================================
# Application Settings
# ========================================
ENVIRONMENT=production
LOG_LEVEL=INFO
MAX_AGENTS=50
MIN_AGENTS=3
ENABLE_AUTOSCALING=true
ENABLE_HEALTH_MONITORING=true
METRICS_ENABLED=true
